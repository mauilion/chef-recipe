# default: off
# description: The git damon allows git repositories to be exported using \
#       the git:// protocol.

service git
{
        disable         = yes
        socket_type     = stream
        wait            = no
        user            = nobody
        server          = /usr/libexec/git-core/git-daemon
        server_args     = --base-path=<%= node[:git][:repopath] %> --export-all --user-path=public_git --syslog --inetd --verbose
        log_on_failure  += USERID
}
