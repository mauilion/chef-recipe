uid = swift
gid = swift
log file = /var/log/rsyncd.log
pid file = /var/run/rsyncd.pid
address = 0.0.0.0

[account]
max connections = 25
path = <%= node[:swift][:device_mount_dir] %>
read only = false
lock file = /var/lock/account.lock

[container]
max connections = 25
path = <%= node[:swift][:device_mount_dir] %>
read only = false
lock file = /var/lock/container.lock

[object]
max connections = 25
path = <%= node[:swift][:device_mount_dir] %>
read only = false
lock file = /var/lock/object.lock
